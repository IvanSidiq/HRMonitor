<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TMT_Hard">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
                android:id="@+id/a_hard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="96dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/oval_button"
                android:contentDescription="It's a button, ha za"
                android:text="1"
                app:layout_constraintEnd_toStartOf="@+id/d_hard"
                app:layout_constraintTop_toBottomOf="@+id/b_hard"/>

        <Button
                android:id="@+id/b_hard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="152dp"
                android:background="@drawable/oval_button"
                android:contentDescription="It's a button, ha za"
                android:text="A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <Button
                android:id="@+id/c_hard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/oval_button"
                android:contentDescription="It's a button, ha za"
                android:text="2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="29dp" app:layout_constraintTop_toBottomOf="@+id/next_hard"/>

        <Button
                android:id="@+id/d_hard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="144dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/oval_button"
                android:contentDescription="It's a button, ha za"
                android:text="B"
                app:layout_constraintEnd_toStartOf="@+id/c_hard"
                app:layout_constraintTop_toTopOf="parent"/>

        <Button
                android:id="@+id/e_hard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="76dp"
                android:background="@drawable/oval_button"
                android:contentDescription="It's a button, ha za"
                android:text="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/d_hard"/>

        <Button
                android:id="@+id/f_hard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="76dp"
                android:layout_marginEnd="64dp"
                android:background="@drawable/oval_button"
                android:contentDescription="It's a button, ha za"
                android:text="C"
                app:layout_constraintEnd_toStartOf="@+id/a_hard"
                app:layout_constraintTop_toBottomOf="@+id/h_hard"/>

        <Button
                android:id="@+id/g_hard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="44dp"
                android:background="@drawable/oval_button"
                android:contentDescription="It's a button, ha za"
                android:text="4"
                app:layout_constraintEnd_toStartOf="@+id/h_hard"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <Button
                android:id="@+id/h_hard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="132dp"
                android:background="@drawable/oval_button"
                android:contentDescription="It's a button, ha za"
                android:text="D"
                app:layout_constraintEnd_toStartOf="@+id/c_hard"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <Button
        android:id="@+id/next_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tmt_explain2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>